<div class="container-fluid">
  <div class="row">
    <div class="col">
      <div class="product-buttons">
        <p><%= link_to 'Back', products_path %></p>
        <p class="v-line"><%= link_to 'Edit', edit_product_path(@product) %></p>
      </div>
    </div>
  </div>

  <div class="row"> <!-- outer row -->
    <div class="col-11 col-md-4"> <!-- 1st col -->
        <div class="product-img">
          <%= image_tag(@product.image_url, class: "image-fluid") %>
        </div>
    </div> <!-- end 1st col -->
    <div class="col-11 col-md-7"> <!-- 2nd col -->
      <div class="product-info-show">
        <div class="row"> <!-- inner row 1 -->
          <div class="col-8">
            <p><strong><%= @product.name.upcase %></strong></p>
          </div>
          <div class="col-4">
            <i class="far fa-star star"></i>
            <i class="fas fa-star-half-alt star"></i>
            <i class="fas fa-star star"></i>
            <i class="fas fa-star star"></i>
            <i class="fas fa-star star"></i>
          </div>
        </div> <!-- end inner row 1 -->
        <div class="row"> <!-- inner row 2 -->
          <div class="col">
            <p><%= @product.description %></p>
            <p><strong>Variety: </strong><%= @product.variety %></p>
          </div>
        </div><!-- end inner row 2 -->
        <div class="row"><!-- inner row 3 -->
          <div class="col">
            <p><strong>Package size:</strong></p>
            <p class="qty"><%= @product.size %>g</p>
          </div>
          <div class="col">
            <p class="price"><%= @product.display_price %>â‚¬</p>
          </div>
        </div> <!-- end inner row 3 -->
      </div>
    </div> <!-- end 2nd col -->
    <div class="col-1 align-self-center"><!-- 3rd col -->
      <p class="next-button">
        <% if @products.index(@product) < (@products.length - 1) %>
          <%= link_to '>> Next', @next_product %>
        <% end %>
      </p>
    </div><!-- end 3rd col -->
  </div> <!-- end outer row -->
    <div class="product-comments">
      <%= render "comments" %>
    </div>

    <%= render "new_comment" %>
</div> <!-- end container -->


  
  