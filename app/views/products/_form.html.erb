<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, placeholder: :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, placeholder: :description, class: "form-control" %>
  </div>

  <div class="form-row">
    <div class="col col-md-6">
      <div class="form-group">
        <%= form.text_field :variety, placeholder: :variety, class: "form-control form-control-sm" %>
      </div>
    </div>
  </div>
  
  <div class="form-row">
    <div class="col col-md-3">
      <%= form.label :size %>
      <div class="input-group mb-3">
        <%= form.number_field :size, placeholder: '0', class: "form-control" %>
        <div class="input-group-append">
          <span class="input-group-text">g</span>
        </div>
      </div>
    </div>
  
    <div class="col col-md-3">
      <%= form.label :price %>
      <div class="input-group mb-3">
        <%= form.number_field :price, step: :any, placeholder: '0', class: "form-control" %>
        <div class="input-group-append">
          <span class="input-group-text">â‚¬</span>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.text_area :image_url, placeholder: "http://domain.com/myimage.jpg", class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "submit-btn" %>
  </div>
<% end %>
