<% if signed_in? %>
	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<div>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</div>
		<div>
			<%= f.label :rating %><br>
			<%= f.text_field :rating, class: "rating" %>
		</div>
		<div>
			<%= f.submit "Comment" %>
		</div>
	<% end %>
<% end %>

