<% if signed_in? %>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
	<div class="card">
		<div class="card-header">
			<h6>Leave a review:</h6>
		</div>
	  <div class="card-body">
			<div class="form-group">
				<%= f.text_area :body, placeholder: "Your comment", class: "form-control" %>
			</div>
			<div class="rating">
			</div>
		</div>
		<div class="card-footer text-md-right">
			<div>
				<%= f.submit "Submit" %>
			</div>
		</div>
	</div>
	<% end %>
<% end %>
