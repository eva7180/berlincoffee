<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Products</h1>

  <div class="container-fluid">
    <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="product-img">
          <%= image_tag(product.image_url, class: "image-fluid") %>
        </div>
        <div class="product-info">
          <p><strong><%= product.name.upcase %></strong></p>
          <p><%= product.description %></p>
          <p><%= product.variety %></p>
          <div class="row">
            <div class="col">
              <p><%= product.quantity %>g</p>
            </div>
            <div class="col">
              <p class="price"><%= number_with_precision(product.price, :precision => 2) %>â‚¬</p>
            </div>
          </div>
        </div>
        <div class="product-buttons">
          <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <p class="v-line"><%= link_to 'Edit', edit_product_path(product) %></p>
          <p class="v-line"><%= link_to 'Show', product %></p>
          
        </div>
      </div><!-- end col -->
    <% end %>
    </div><!-- end row -->
  </div>
  
  <br>
  
  <%= link_to 'New Product', new_product_path %>
</div>