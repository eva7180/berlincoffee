<div class="col-sm-12 col-md-6 col-lg-4">
  <div class="product-img">
    <%= link_to (image_tag(product.image_url)), product, class: "image-fluid" %>
  </div>
  <div class="product-info">
    <div class="row">
      <div class="col-8">
        <p><strong><%= product.name.upcase %></strong></p>
      </div>
      <div class="col-4 stars">
        <i class="far fa-star star"></i>
        <i class="fas fa-star-half-alt star"></i>
        <i class="fas fa-star star"></i>
        <i class="fas fa-star star"></i>
        <i class="fas fa-star star"></i>
      </div>
    </div>
    <p><%= product.description %></p>
    <p><%= product.variety %></p>
    <div class="row">
      <div class="col">
        <p><%= product.size %>g</p>
      </div>
      <div class="col">
        <p class="price"><%= product.display_price %>â‚¬</p>
      </div>
    </div>
  </div>
  <div class="product-buttons">
    <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <p class="v-line"><%= link_to 'Edit', edit_product_path(product) %></p>
    <p class="v-line"><%= link_to 'Show', product %></p>
    
  </div>
</div><!-- end col -->