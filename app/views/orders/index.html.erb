<h1>Your past orders</h1>
<% if @orders.any? %>
  <p>(Click on Order Ref# to view details)</p>
  <div class="row">
    <div class="col-2">
      <strong>Order Ref.</strong>
    </div>
    <div class="col-3">
      <strong>Order Date</strong>
    </div>
    <div class="col-2 text-right">
      <strong># of items</strong>
    </div>
    <div class="col-2 text-right">
      <strong>Status</strong>
    </div>
    <div class="col-2 text-right">
      <strong>Total Price</strong>
    </div>
  </div>
  <% @orders.each do |order| %>
  <div class="row">
    <div class="col-2">
      <%= link_to "berlincoffee-#{order.id}", order_path(order) %>
    </div>
    <div class="col-3">
      <% if order.created_at != nil %>
      <%= order.created_at.strftime(" %d.%m.%Y") %>
      <% end %>
    </div>
    <div class="col-2 text-right">
      <%= order.total_item_count %>
    </div>
    <div class="col-2 text-right">
      <%= order.status %>
    </div>
    <div class="col-2 text-right">
      <%= number_to_euro order.total_price %>
    </div>
  </div>
  <% end %>
<% else %>
  <p>You have no orders yet!</p>
  <%= button_to "Start Shopping", products_path, method: :get,  class: "submit-btn" %>
<% end %>